<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                            "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.boardbackend.dao.PostDao">
    <insert id="insert" parameterType="PostModel" useGeneratedKeys="true" keyProperty="id">
        insert into board (id, title, content, date, viewCnt) values (#{id}, #{title}, #{content}, #{date}, #{viewCnt})
    </insert>

    <select id="getPosts" resultType="PostModel">
        SELECT * FROM BOARD ORDER BY id DESC
    </select>

    <select id="viewPost" resultType="PostModel" parameterType="int">
        SELECT * FROM BOARD WHERE id= #{id}
    </select>

    <delete id="deletePost">
        DELETE FROM BOARD WHERE id = #{id}
    </delete>

    <select id="infoPost" resultType="PostModel" parameterType="int">
        SELECT * FROM BOARD WHERE id= #{id}
    </select>

    <update id="updatePost" parameterType="PostModel">
        UPDATE BOARD set
        title = #{title},
        content = #{content},
        date = #{date}
        WHERE id = #{id}
    </update>

    <update id="updateViewCnt" parameterType="PostModel">
        UPDATE BOARD set
        viewCnt = #{viewCnt}+1
        WHERE id = #{id}
    </update>
</mapper>